{
    "name": "gamerchallengescda-back",
    "type": "module",
    "scripts": {
        "======= Pour le dev ========": "========================",
        "dev": "tsx --watch --env-file=.env index.ts",
        "test": "echo \"Error: no test specified\" && exit 1",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier . --write",
        "docker:up": "docker compose up -d --build",
        "docker:start:dev": "npm run prisma:generate && npm run dev",
        "prisma:generate": "prisma generate",
        "db:migrate:reset": "docker compose exec gamer-challenges-api npx prisma migrate reset --force",
        "db:migrate:dev": "docker compose exec gamer-challenges-api npx prisma migrate dev --name init",
        "db:generate": "docker compose exec gamer-challenges-api npx prisma generate",
        "db:reinit": "npm run db:migrate:reset && npm run db:migrate:dev && npm run db:generate"
    },
    "devDependencies": {
        "@eslint/js": "^9.31.0",
        "@types/express": "^5.0.3",
        "@types/morgan": "^1.9.10",
        "@types/node": "^24.0.12",
        "@types/swagger-jsdoc": "^6.0.4",
        "@types/swagger-ui-express": "^4.1.8",
        "eslint": "^9.31.0",
        "prisma": "^6.16.2",
        "tsx": "^4.20.3",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.37.0"
    },
    "dependencies": {
        "@prisma/client": "^6.16.2",
        "@types/cors": "^2.8.19",
        "axios": "^1.10.0",
        "cors": "^2.8.5",
        "express": "^5.1.0",
        "helmet": "^8.1.0",
        "morgan": "^1.10.1",
        "prettier": "^3.6.2",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.1",
        "winston": "^3.17.0",
        "zod": "^4.0.5"
    }
}
