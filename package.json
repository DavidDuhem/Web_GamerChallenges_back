{
  "name": "gamerchallengescda-back",
  "type": "module",
  "scripts": {
    "======= Pour le dev ========": "========================",
    "dev": "tsx watch --env-file=.env index.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --write",
    "docker:up": "docker compose up -d --build",
    "docker:start:dev": "npm i && npm run prisma:generate && npm run dev",
    "prisma:generate": "prisma generate",
    "db:seed": "docker compose exec gamer-challenges-api npx tsx --env-file=.env prisma/seeding.ts",
    "db:migrate:reset": "docker compose exec gamer-challenges-api npx prisma migrate reset --force",
    "db:migrate:dev": "docker compose exec gamer-challenges-api npx prisma migrate dev --name init",
    "db:generate": "docker compose exec gamer-challenges-api npx prisma generate",
    "db:reinit": "npm run db:migrate:reset && npm run db:migrate:dev && npm run db:generate && npm run db:seed",
    "======= Pour les tests ========": "========================",
    "test:spec": "tsx --test --env-file=./src/test/config/.env.test --import ./src/test/config/global-setup.ts --experimental-test-isolation=none ./src/controllers/**/*.spec.test.ts",
    "db:test:generate": "docker compose -f src/test/config/compose.test.yml up -d"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.31.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^5.0.3",
    "@types/express-xss-sanitizer": "^2.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.0.12",
    "@types/nodemailer": "^7.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/yamljs": "^0.2.34",
    "eslint": "^9.31.0",
    "prisma": "^6.16.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.37.0"
  },
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "@types/cors": "^2.8.19",
    "argon2": "^0.44.0",
    "axios": "^1.12.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-xss-sanitizer": "^2.0.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "nodemailer": "^7.0.6",
    "prettier": "^3.6.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0",
    "yamljs": "^0.3.0",
    "zod": "^4.1.9",
    "zx": "^8.8.4"
  }
}
